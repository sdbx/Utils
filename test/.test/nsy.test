add(tests, &tlen, (testcase) {
   .name = "e-mark",
   .argv = "e",
   .input = "asdf",
   .output = "！a！s！d！f！\n"
});

add(tests, &tlen, (testcase) {
   .name = "q-mark",
   .argv = "q",
   .input = "asdf",
   .output = "？a？s？d？f？\n"
});

add(tests, &tlen, (testcase) {
   .name = "multiline",
   .argv = "e",
   .input = "asdf\nqwer",
   .output = "！a！s！d！f！q！w！e！r！\n"
});